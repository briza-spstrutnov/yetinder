{% extends "base.html.twig" %}

{% block title %}
    Registrace
{% endblock %}

{% block body %}
    <div class="container">
        {% block header %}
            <header>
                <h2>Nový Yeti</h2>
                <form action="/logout" method="post">
                    <input type="submit" value="Odhlásit se">
                </form>
                <a href="/yetinder">Yetinder</a>
                <a href="/login">Přihlásit se</a>
                <a href="/register">Zaregistrovat se</a>
                <a href="/yeti/register">Nový Yeti</a>
                <a href="/stats">Statistiky</a>
                <a href="/">Nejlépe hodnocení</a>
            </header>
        {% endblock %}
        <div id="register-form" class="form">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Zaregistrovat se">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}