{% extends "base.html.twig" %}

{% block title %}
    Best
{% endblock %}

{% block body %}
    <div class="container">
        <div class="container">
            {% for x in yeti %}
                <div class="yeti justify-content-md-center">
                    <table class="yeti-table">
                        <tr>
                            <th style="font-size: 25px">{{ x.name }}</th>
                        </tr>
                        <tr>
                            <th>Pohlaví</th>
                            <th>Výška</th>
                            <th>Váha</th>
                            <th>Telefonní číslo</th>
                            <th>Hodnocení</th>
                        </tr>
                        <tr>
                            <td>{{ x.gender }}</td>
                            <td>{{ x.height }}</td>
                            <td>{{ x.weight }}</td>
                            <td>{{ x.phoneNumber }}</td>
                            <td>{{ x.rating }}</td>
                        </tr>
                    </table>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}